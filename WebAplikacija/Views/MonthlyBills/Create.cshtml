@model WebAplikacija.ViewModels.MonthlyBillViewModel

@{
    ViewBag.Title = "Sukurti";
}

<script type="text/javascript">
    //check is checkbox not empty
    function checkTextBox() {
        var textbox = document.getElementById("billDescription");
        if (!textbox.value) {
            alert("Būtina užpildyti laukelį");
            return false;
        }
        else {
            return true;
        }
    }

</script>

<h2>Sukurti naują mėnesio sąskaitą</h2>

@using (Html.BeginForm("Create", "MonthlyBills", FormMethod.Post, new { onsubmit = "return checkTextBox();" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="col-md-2 control-label">Sąskaitos aprašymas:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BillDescription, new { id = "billDescription" })
                @Html.ValidationMessageFor(model => model.BillDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sukurti" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal", "Index")
</div>

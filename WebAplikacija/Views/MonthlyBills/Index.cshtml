@model WebAplikacija.Models.MonthlyBillsModel

@{
    ViewBag.Title = "Mėnesio sąskaitos";
}

<h2>Mėnesio sąskaitos</h2>

<p>
    @Html.ActionLink("Sukurti nauja sąskaitą", "Create")
</p>
<table class="table table-striped table-hover" >
    <tr>
        <th>
            Sąskaitos aprašymas
        </th>       
        <th></th>
    </tr>

    @foreach (var item in Model.MonthlyBillsList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BillDescription)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.BillDescriptionID })" class="btn badge">Koreguoti</a>
                <a href="@Url.Action("Details", new { id = item.BillDescriptionID })" class="btn badge">Detaliau</a>
                <a href="@Url.Action("Delete", new { id = item.BillDescriptionID })" class="btn badge">&times;</a>
            </td>
        </tr>
    }
</table>

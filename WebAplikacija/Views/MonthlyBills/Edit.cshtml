@model WebAplikacija.Models.MonthlyBillsModel

@{
    ViewBag.Title = "Koreguoti";
}

<h2>Koreguoti mėnesio sąskaitą</h2>

<script type="text/javascript">
    //check is checkbox not empty
    function checkTextBox() {
        var textbox = document.getElementById("billDescription");
        if (!textbox.value) {
            alert("Būtina užpildyti laukelį");
            return false;
        }
        else {
            return true;
        }
    }

</script>

@using (Html.BeginForm("Edit", "MonthlyBills", FormMethod.Post, new { onsubmit = "return checkTextBox();" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Bill.BillDescriptionID)

        <div class="form-group">
            <label class="col-md-2 control-label">Sąskaitos aprašymas:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Bill.BillDescription, new { id = "billDescription" })
                @Html.ValidationMessageFor(model => model.Bill.BillDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Išsaugoti pakeitimus" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal", "Index")
</div>


@{
    ViewBag.Title = "Edit";
}
@model WebAplikacija.Models.PurchasesModel

<div class="form-group col-md-offset-4">
    @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(m => m.Purchase.ID)

        <div class="editor-field form-group">
            <label class="col-md-2 control-label">Pirkinys:</label>
            @Html.EditorFor(m => m.Purchase.Name)
            @Html.ValidationMessageFor(m => m.Purchase.Name)
        </div>
        <div class="editor-field form-group">
            <label class="col-md-2 control-label">Kaina:</label>
            @Html.EditorFor(m => m.Purchase.Price)
            @Html.ValidationMessageFor(m => m.Purchase.Price)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" class="btn" title="saveBtn" value="Išsaugoti pakeitimus" />
            </div>
        </div>
    }
    <div class="col-md-offset-2">
        @Html.ActionLink("Pradinis puslapis", "Index")
    </div>
</div>

